{
    "name": "common-lib",
    "private": true,
    "version": "1.0.0",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/es/index.d.ts",
                "default": "./dist/es/index.js"
            },
            "require": {
                "types": "./dist/commonjs/index.d.ts",
                "default": "./dist/commonjs/index.js"
            }
        },
        "./*": {
            "import": {
                "types": "./dist/es/*.d.ts",
                "default": "./dist/es/*.js"
            },
            "require": {
                "types": "./dist/commonjs/*.d.ts",
                "default": "./dist/commonjs/*.js"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build:commonjs": "tsc --project tsconfig.json",
        "build:es": "tsc --project tsconfig.es.json",
        "build": "pnpm clean && pnpm build:commonjs && pnpm build:es",
        "watch:commonjs": "tsc --project tsconfig.json --watch",
        "watch:es": "tsc --project tsconfig.es.json --watch",
        "watch": "concurrently \"pnpm watch:commonjs\" \"pnpm watch:es\""
    },
    "devDependencies": {
        "@types/node": "^22.18.6",
        "concurrently": "^9.2.1",
        "rimraf": "^6.0.1",
        "typescript": "~5.8.3"
    },
    "dependencies": {
        "yaml": "^2.8.1"
    }
}
